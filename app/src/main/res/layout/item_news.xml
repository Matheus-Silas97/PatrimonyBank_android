<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="270dp"
    android:id="@+id/cardView"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="20dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_name_theme"
            android:layout_width="wrap_content"
            android:layout_marginBottom="12dp"
            app:layout_constraintHorizontal_bias="0"
            android:elevation="1dp"
            android:textColor="@color/white"
            android:padding="8dp"
            android:background="@drawable/bg_radius_textview"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/txt_body_news"
            app:layout_constraintEnd_toEndOf="@+id/txt_body_news"
            app:layout_constraintStart_toStartOf="@+id/txt_body_news" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_body_news"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="1dp"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_marginHorizontal="20dp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-black"
            app:layout_constraintBottom_toTopOf="@+id/txt_font"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_font"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="1dp"
            android:text="4h atás - Minha cabeça"
            android:textColor="#C4FFFFFF"
            android:layout_marginBottom="20dp"
            app:layout_constraintStart_toStartOf="@+id/txt_theme_news"
            app:layout_constraintBottom_toTopOf="@id/txt_theme_news"
            app:layout_constraintHorizontal_bias="0" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_theme_news"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:drawablePadding="5dp"
            android:elevation="1dp"
            android:text="@string/leia_mais"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:drawableRightCompat="@drawable/ic_next"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_news"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>